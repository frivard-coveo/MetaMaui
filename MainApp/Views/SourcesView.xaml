<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetaMaui.Views.SourcesView"
             Title="Sources">
    <VerticalStackLayout>
        <Label 
            Text="{Binding PageTitle}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker x:Name="sourcepicker" ItemsSource="{Binding Sources}" ItemDisplayBinding="{Binding name}" SelectedItem="{Binding SelectedSource}" HorizontalOptions="Center">
            
        </Picker>

        <Label 
            Text="{Binding Source={x:Reference sourcepicker}, Path=SelectedItem.id, StringFormat='Thank you for choosing {0}'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
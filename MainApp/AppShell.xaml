<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MetaMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MetaMaui"
    xmlns:views="clr-namespace:MetaMaui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Route="Main"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_notes" />

        <ShellContent
            Title="Sources"
            Route="Sources"
            ContentTemplate="{DataTemplate views:SourcesView}"
            Icon="icon_about" />
    </TabBar>

</Shell>
